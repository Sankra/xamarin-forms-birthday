<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Birthdays.Views.ClosestBirthdayView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="{Binding ClosestBirthDay.Name}" HorizontalTextAlignment="Center" FontSize="24" VerticalOptions="Start" Margin="0,30,0,0" />
            <Label Text="{Binding ClosestBirthDay.Age}" HorizontalTextAlignment="Center" FontSize="32" VerticalOptions="CenterAndExpand" />
            <Label Text="{Binding ClosestBirthDay.Birthday}" HorizontalTextAlignment="Center" FontSize="24" VerticalOptions="End" Margin="0,0,0,30" />
        </StackLayout>
    </ContentView.Content>
</ContentView>